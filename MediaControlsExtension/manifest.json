{
  "manifest_version": 3,
  "name": "Media Key Controls",
  "version": "1.1",
  "description": "Control Bandcamp and YouTube with media keys via native app",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.bandcamp.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bandcamp.com/*", "*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
